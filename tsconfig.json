{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "skipDefaultLibCheck": false,
    "skipLibCheck": false,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "types": ["node", "vitest"],
    "rootDirs": ["packages/**"]
  },
  "include": ["./global.d.ts", "packages", "packages/nuxt/playground", "packages/nuxt"],
  "exclude": ["node_modules"]
}
